# Kids Food Advisor フロントエンド環境変数
# この設定はNext.jsビルド時に読み込まれます

# === API設定 ===
# ローカル開発環境
NEXT_PUBLIC_API_MODE=local
NEXT_PUBLIC_API_URL=http://localhost:8082
NEXT_PUBLIC_AGENT_ENGINE_URL=http://localhost:8082 # 便宜上NEXT_PUBLIC_API_URLと同じ値をセットする

# === ステージング環境設定 ===
# 以下の設定はCI/CDでオーバーライドされます
# NEXT_PUBLIC_API_MODE=staging
# NEXT_PUBLIC_AGENT_ENGINE_URL=https://us-central1-my-staging-project-id.cloudfunctions.net/agent-engine-stream
# NEXT_PUBLIC_CLOUD_FUNCTIONS_URL=https://us-central1-my-staging-project-id.cloudfunctions.net/image-recognition

# === 本番環境設定 ===
# 以下の設定はCI/CDでオーバーライドされます
# NEXT_PUBLIC_API_MODE=production
# NEXT_PUBLIC_AGENT_ENGINE_URL=https://us-central1-my-prod-project-id.cloudfunctions.net/agent-engine-stream
# NEXT_PUBLIC_CLOUD_FUNCTIONS_URL=https://us-central1-my-prod-project-id.cloudfunctions.net/image-recognition


# === Firebase 認証設定 ===
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id